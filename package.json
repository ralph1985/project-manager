{
  "name": "project-manager",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo configuration for project-manager packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --stream --parallel",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream",
    "format": "lerna run format --stream",
    "test": "lerna run test:unit --stream",
    "test:e2e": "lerna run test:e2e --stream",
    "prepare": "lerna run prepare --stream",
    "home": "node scripts/serve-home.js",
    "release:pm-modal": "node scripts/release-package.js --pkg @project-manager/pm-modal",
    "release:pm-i18n": "node scripts/release-package.js --pkg @project-manager/pm-i18n",
    "release:pm-weather": "node scripts/release-package.js --pkg @project-manager/pm-weather",
    "task:add": "node scripts/add-task.js"
  },
  "devDependencies": {
    "lerna": "8.1.2",
    "conventional-changelog-conventionalcommits": "7.0.2"
  }
}
